@page "{id:int}"
@model Team6.Web.Pages.Reflections.ViewModel
@{
    ViewData["Title"] = "View Reflection";
}

<div class="container">
    @if (Model.Reflection != null)
    {
        <h1>@Model.Reflection.Title</h1>
        <div class="mb-3">
            <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
        </div>

        @if (!string.IsNullOrEmpty(Model.PdfDataUrl))
        {
            <div class="pdf-container" style="height: 800px;">
                <iframe src="@Model.PdfDataUrl" style="width: 100%; height: 100%; border: none;"></iframe>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                PDF content not available.
            </div>
        }
    }
    else
    {
        <div class="alert alert-danger">
            Reflection not found.
        </div>
    }
</div>