@page
@model Team6.Web.Pages.Account.ForgotPasswordModel
@{
   ViewData["Title"] = "Reset Password";
}

<!-- main container for centering -->
<div class="container">
   <div class="row justify-content-center">
       <div class="col-md-6">
           <!-- card component that incorporates dynamic color palette -->
           <div class="card mt-5" style="background-color: var(--bg-color); color: var(--text-color);">
               <div class="card-body">
                   <h2 class="card-title text-center" style="color: var(--text-color);">Reset Password</h2>
                   
                   <!-- error message display -->
                   @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                   {
                       <div class="alert alert-danger">@Model.ErrorMessage</div>
                   }

                   <!-- password reset form -->
                   <form method="post">
                       <!-- username input form group -->
                       <div class="mb-3">
                           <label asp-for="Username" class="form-label" style="color: var(--text-color);">Username</label>
                           <input asp-for="Username" class="form-control" style="background-color: var(--bg-color); color: var(--text-color); border: 1px solid var(--text-color);" required />
                           <span asp-validation-for="Username" class="text-danger"></span>
                       </div>

                       <!-- email input form group -->
                       <div class="mb-3">
                           <label asp-for="Email" class="form-label" style="color: var(--text-color);">Email</label>
                           <input asp-for="Email" type="email" class="form-control" style="background-color: var(--bg-color); color: var(--text-color); border: 1px solid var(--text-color);" required />
                           <span asp-validation-for="Email" class="text-danger"></span>
                       </div>

                       <!-- new password input form group -->
                       <div class="mb-3">
                           <label asp-for="NewPassword" class="form-label" style="color: var(--text-color);">New Password</label>
                           <input asp-for="NewPassword" type="password" class="form-control" style="background-color: var(--bg-color); color: var(--text-color); border: 1px solid var(--text-color);" required />
                           <span asp-validation-for="NewPassword" class="text-danger"></span>
                       </div>

                       <!-- submit button -->
                       <div class="d-grid">
                           <button type="submit" class="btn btn-primary" style="background-color: var(--btn-bg-color); border-color: var(--btn-border-color);">Reset Password</button>
                       </div>
                   </form>

                   <!-- return to login link -->
                   <div class="mt-3 text-center">
                       <a asp-page="./Login" style="color: var(--text-color);">Return to Login</a>
                   </div>
               </div>
           </div>
       </div>
   </div>
</div>