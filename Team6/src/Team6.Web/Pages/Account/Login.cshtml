@page
@model Team6.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card mt-5" style="background-color: var(--bg-color); color: var(--text-color);">
                <div class="card-body">
                    <h2 class="card-title text-center" style="color: var(--text-color);">Login</h2>
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Username" class="form-label" style="color: var(--text-color);">Username</label>
                            <input asp-for="Username" class="form-control" style="background-color: var(--bg-color); color: var(--text-color); border: 1px solid var(--text-color);" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label" style="color: var(--text-color);">Password</label>
                            <input asp-for="Password" type="password" class="form-control" style="background-color: var(--bg-color); color: var(--text-color); border: 1px solid var(--text-color);" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary" style="background-color: var(--btn-bg-color); border-color: var(--btn-border-color);">Login</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <a asp-page="/Account/Register" style="color: var(--text-color);">Create new account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
